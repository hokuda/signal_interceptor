##
##  Makefile -- Build procedure for sample test Apache module
##  Autogenerated via ``apxs -n signal_interceptor -g''.
##

builddir=.
top_srcdir=/etc/httpd
top_builddir=/usr/lib64/httpd
include /usr/lib64/httpd/build/special.mk

#   the used tools
APACHECTL=apachectl

#   additional defines, includes and libraries
#DEFS=-Dmy_define=my_value
#INCLUDES=-Imy/include/dir
#LIBS=-Lmy/lib/dir -lmylib
#LIBS=-L/etc/httpd/modules -lsignal_interceptor

#   the default target
all: local-shared-build

#   install the shared object file into Apache 
install: install-modules-yes

#   cleanup
clean:
	-rm -f mod_signal_interceptor.o mod_signal_interceptor.lo mod_signal_interceptor.slo mod_signal_interceptor.la 

#   simple test
test: reload
	lynx -mime_header http://localhost/test

#   install and activate shared object by reloading Apache to
#   force a reload of the shared object file
reload: install restart

#   the general Apache start/restart/stop
#   procedures
start:
	$(APACHECTL) start
restart:
	$(APACHECTL) restart
stop:
	$(APACHECTL) stop

